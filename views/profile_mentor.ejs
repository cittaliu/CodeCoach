<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- bootstrap css -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/profile.css">
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="scripts/search.js"></script>

    <title>Personal Profile</title>
</head>

<body>
  <div class="container text-center">
      <div class="row">
          <div class="heading col-md-12">
              <h3 class="col-md-6">Hey Mentor <%= mentor.name %>! Welcome back.</h3>
              <a id="home" type="button" href="/" class="btn btn-primary col-md-1">Home</a>
              <a id="logout" type="button" href="/logout" class="btn btn-primary col-md-1">Log Out</a>
          </div>
            <div class="studentlist col-md-6">
                <div class="pending-requests">
                    <h2>Pending</h2>
                    <p><%= mentor.pending[0].name %></p>
                    <p><%= mentor.pending[0].email %></p>
                    <p><%= mentor.pending[0].number %></p>
                    <p><%= mentor.pending[0].areaOfInterest %></p>
                    <p><%= mentor.pending[0].website %></p>
                    <p><%= mentor.pending[0].bio %></p>
                    <img src="<%= mentor.pending[0].image %>"></img>
                  <div class="result">
                    <button class="move cancel" data-id="<%= mentor._id %>">Cancel</button>
                    <button class="move accept" data-id="<%= mentor._id %>">Accept</button>
                  </div>

                </div>
            </div>
            <div class="main-section-right col-md-5">
                <div class="my-info">
                    <h2>My Info</h2>
                    <div class="about-me col-md-8">
                        <p>Name: <%= mentor.name %></p>
                        <p>Email: <%= mentor.email %></p>
                        <p>Number: <%= mentor.number %></p>
                        <p>Website <%= mentor.website %></p>
                        <p>Interests <%= mentor.areaOfInterest %></p>
                        <p>Bio: <%= mentor.bio %></p>
                        <button type="button" class="editBtn btn btn-primary" data-id="<%= mentor._id %>">Edit</button>
                        <button type="button" class="deleteBtn btn btn-danger" data-id="<%= mentor._id %>">Delete</button>
                    </div>
                    <div class="col-md-4">
                        <img src="<%= mentor.image %>">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
